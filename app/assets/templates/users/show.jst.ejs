<section class="profile-banner">
	<figure class="banner">
		<img src="<%= user.get("banner_url") %>">
	</figure>
</section>

<section class="profile-nav-ribbon stretch">
</section>

<section class="profile-nav-ribbon">
	<figure class="ribbon">
		<ul class="profile-nav">
			<li class="left">
        <a id="posts-link" class="active" href="/#users/<%= user.id %>">Posts</a>
      </li>
			<li class="left">
        <a id="following-link" href="#/users/<%= user.id %>/following">Following</a>
      </li>
			<li class="left">
        <a id="followers-link" href="#/users/<%= user.id %>/followers">Followers</a>
      </li>
			<li class="left">
        <a id="fav-posts-link" href="#/users/<%= user.id %>/favorite_posts">Favorite Posts</a>
      </li>
			<li class="left">
        <a id="fav-users-link" href="#">Favorite Users</a>
      </li>
		</ul>
	</figure>
</section>

<section id="user-show">
	<%= userProfileTemplate({ user: user }) %>

	<section class="posts-container">
	  <header class="title"><h2>Posts from <%= user.get("_username") %></h2></header>
	  <% posts.each( function(post) { %>
	  	<%= postsTemplate({ post: post }) %>
	  <% }) %>
	</section>
</section>