<div class="flash-errors">
  <% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
      <div class="error"><%= error %></div>
    <% end %>
  <% end %>
</div>

<div class="flash-notices">
  <% if flash[:notice] %>
    <% flash[:notice].each do |notice| %>
      <div class="notice"><%= notice %></div>
    <% end %>
  <% end %>
</div>