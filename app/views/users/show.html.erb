<section class="profile-banner">
	<figure class="banner">
	</figure>
</section>

<section class="profile-nav-ribbon stretch">
</section>

<section class="profile-nav-ribbon">
	<figure class="ribbon">
		<ul class="profile-nav">
			<li class="left"><a href="#">Posts</a></li>
			<li class="left"><a href="#">Following</a></li>
			<li class="left"><a href="#">Followers</a></li>
			<li class="left"><a href="#">Favorite Posts</a></li>
			<li class="left"><a href="#">Favorite Users</a></li>
			
			<% if current_user.id == @user.id %>
			  <li class="right">
					<a href="<%= edit_user_url(current_user) %>">Edit Profile</a>
					</li>
			<% end %>
		</ul>
	</figure>
</section>

<main class="main-content">
	<section class="main-user-info">
		<figure class="avatar-large">
			<div></div>
		</figure>
	  <div class="fullname"><%= @user.fullname %></div>
	  <div class="username"><%= @user._username %></div>
	  <div class="join-date">Joined <%= @user.join_date %></div>
	  <% unless current_user.id == @user.id %>
	    <%= render 'users/follow_form', user: @user %>
	  <% end %>
	</section>

	<section class="post-container">
	  <section class="post-content active">
	    <header class="title"><h2>Posts</h2></div>
	    <% @user.posts.each do |post| %>
	      <%= render 'posts/post', post: post %>
	    <% end %>
	  </section>

	  <section class="post-content active">
	    <div "title">Following</div>
	    <% @user.followed_users.each do |followed_user| %>
	      <div class="sub-user-info">
	        <%= render 'users/profile', user: followed_user %>
	      </div>
	    <% end %>
	  </section>

	  <section class="post-content active">
	    <div "title">Followers</div>
	    <% @user.followers.each do |follower| %>
	      <div class="user-profiles">
	        <%= render 'users/profile', user: follower %>
	      </div>
	    <% end %>
	  </section>

	  <section class="post-content active">
	    <div "title">Favorite Posts</div>
	    <%#= @user.favorite_posts %>
	  </section>
	</section>
</section>
